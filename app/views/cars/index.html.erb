<div class="cards">
 <% @cars.each do |car| %>
  <div class="card">
        <%= link_to car.brand, car_path(car)  %>
        <%= car.model %>
        <%= car.year_of_production %>
        <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
        <%= link_to "edit", edit_car_path(car) %>
        <%= link_to "delete", car_path(car), class: "button-booking1",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
  <%end%>
</div>

